<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myFtextview"
        android:layout_width="263dp"
        android:layout_height="0dp"
        android:layout_marginBottom="294dp"
        android:text="hello balint"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ff0000"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFbutton"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/myFbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="100dp"
        android:text="Katt ide"
        app:backgroundTint="#E11F1F"
        app:layout_constraintBottom_toTopOf="@+id/myFtextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>